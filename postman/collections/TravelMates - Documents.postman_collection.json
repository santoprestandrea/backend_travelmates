		{
			"name": "Upload Document",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has document data\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('id');",
							"    pm.expect(jsonData).to.have.property('fileName');",
							"    pm.expect(jsonData).to.have.property('fileUrl');",
							"    pm.expect(jsonData).to.have.property('category');",
							"});",
							"",
							"// Salva l'ID del documento per i test successivi",
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"documentId\", jsonData.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"fileName\": \"Flight Tickets.pdf\",\n    \"fileUrl\": \"https://example.com/documents/flight-tickets.pdf\",\n    \"fileType\": \"application/pdf\",\n    \"fileSize\": 2048576,\n    \"category\": \"TICKET\",\n    \"description\": \"Biglietti aerei per tutti i partecipanti\"\n}",
