		{
			"name": "01 - Get My Profile",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Response has user profile data\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.have.property('id');\r",
							"    pm.expect(jsonData).to.have.property('email');\r",
							"    pm.expect(jsonData).to.have.property('firstName');\r",
							"    pm.expect(jsonData).to.have.property('role');\r",
							"});\r",
							"\r",
							"pm.test(\"Password is not exposed\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.not.have.property('password');\r",
							"});\r",
							"\r",
							"// Salva l'ID utente per test futuri\r",
							"if (pm.response.code === 200) {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.environment.set(\"current_user_id\", jsonData.id);\r",
							"    console.log(\"User ID salvato:\", jsonData.id);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
