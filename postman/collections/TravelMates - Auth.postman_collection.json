		{
			"name": "01 - Register Success",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Verifica che lo status sia 200 o 201\r",
							"pm.test(\"Status code is 200 or 201\", function () {\r",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);\r",
							"});\r",
							"\r",
							"// Verifica che la risposta contenga il token\r",
							"pm.test(\"Response has token\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.have.property('token');\r",
							"});\r",
							"\r",
							"// Verifica che la risposta contenga l'utente\r",
							"pm.test(\"Response has user data\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.user).to.have.property('id');\r",
							"    pm.expect(jsonData.user).to.have.property('email');\r",
							"    pm.expect(jsonData.user.email).to.eql(\"mario.rossy@example.com\");\r",
							"});\r",
							"\r",
							"// SALVA IL TOKEN AUTOMATICAMENTE\r",
							"if (pm.response.code === 200 || pm.response.code === 201) {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.environment.set(\"auth_token\", jsonData.token);\r",
							"    pm.environment.set(\"user_id\", jsonData.user.id);\r",
							"    console.log(\" Token salvato:\", jsonData.token);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"email\": \"mario.rossy@example.com\",\r\n    \"password\": \"Password123\",\r\n    \"firstName\": \"Mario\",\r\n    \"lastName\": \"Rossi\",\r\n    \"dateOfBirth\": \"1990-05-15\",\r\n    \"phoneNumber\": \"+393331234567\",\r\n    \"bio\": \"Amante dei viaggi\"\r\n}",
