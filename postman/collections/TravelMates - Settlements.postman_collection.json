		{
			"name": "Get All Settlements",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response is an array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.be.an('array');",
							"});",
							"",
							"pm.test(\"Each settlement has required fields\", function () {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.length > 0) {",
							"        pm.expect(jsonData[0]).to.have.property('id');",
							"        pm.expect(jsonData[0]).to.have.property('fromUser');",
							"        pm.expect(jsonData[0]).to.have.property('toUser');",
							"        pm.expect(jsonData[0]).to.have.property('amount');",
							"        pm.expect(jsonData[0]).to.have.property('status');",
							"    }",
							"});"
						],
